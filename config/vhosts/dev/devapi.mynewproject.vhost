<VirtualHost *:80>
		ServerName devapi.mynewproject.com
		DocumentRoot "/var/www/mynewproject/"

		<Directory "/var/www/mynewproject/">
		
			Order allow,deny
			Allow from all
			AllowOverride All
		
			RewriteEngine on
			RedirectMatch ^/admin/?(.*)? http://devadmin.mynewproject.com/$1
			RewriteRule ^((?!index|public).*) index.php/api/$1/%{QUERY_STRING}	[L]

			SetEnv APP_CONTEXT dev
		
		</Directory>
		
		Include sites-available/performances.conf
		Include sites-available/security.conf

</VirtualHost>