<VirtualHost *:80>
		ServerName devadmin.mynewproject.com
		DocumentRoot "/var/www/mynewproject/"

		<Directory "/var/www/mynewproject/">
		
			# Restricted access using Basic Apache Authentication
			#AuthName "Restricted Access"
			#AuthType Basic
			#AuthUserFile "/var/www/mynewproject/views/admin/.htpasswd"
			#Require valid-user
		
			Order allow,deny
			Allow from all
			AllowOverride All
		
			RewriteEngine on
			RewriteRule ^((?!index|public).*) index.php/admin/$1/%{QUERY_STRING}	[L]

			SetEnv APP_CONTEXT dev
		
		</Directory>
		
		Include sites-available/performances.conf
		Include sites-available/security.conf

</VirtualHost>